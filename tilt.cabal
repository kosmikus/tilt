maintainer:          andres@well-typed.com
category:            Data
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >= 1.10

library
  exposed-modules:     Data.Type.Env,
                       Data.Type.Fin,
                       Data.Type.Vec,
                       Data.Type.BasicFunctors,
                       Data.Type.Nat,
                       Data.Type.List,
                       Data.Type.Constraint,
                       Data.Type.Ptr
  default-extensions:  GADTs,
                       KindSignatures,
                       TypeOperators,
                       DataKinds,
                       StandaloneDeriving,
                       TypeSynonymInstances,
                       FlexibleInstances,
                       RankNTypes,
                       ConstraintKinds,
                       PolyKinds,
                       TypeFamilies,
                       InstanceSigs,
                       AutoDeriveTypeable,
                       ScopedTypeVariables,
                       RoleAnnotations
  other-extensions:    OverloadedStrings,
                       UndecidableInstances
  build-depends:       base >= 4.6 && < 5,
                       singletons >= 1 && < 2,
                       template-haskell
  hs-source-dirs:      src
  default-language:    Haskell2010
